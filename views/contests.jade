extends layout

block content
  if user.isAdmin
    .table-title Contest to Start
    table#active-contests-list.table.table-bordered.table-responsive
      thead
        tr
          th(colspan="2") Name
          |       
          th Remarks / Information
          |       
          th Action
      |   
      tbody
        each contest in createdContests
          tr
            td.contest-thumbnail
              img.contest-thumbnail(src="/images/#{contest.name}.jpg")
            |     
            td #{contest.name}
            |     
            td
            | 
            td
              button.contest-start-draw.btn.btn-warning(value="#{contest.id}") START

  .table-title Active Contests
  table#active-contests-list.table.table-bordered.table-responsive
    thead
      tr
        th(colspan="2") Name
        |       
        th Started At
        |       
        th Draw Time
        |       
        th # Players
        | 
        if user.isAdmin
          th Action
    |   
    tbody
      each contest in activeContest
        tr
          td.contest-thumbnail
            img.contest-thumbnail(src="/images/#{contest.name}.jpg")
          |     
          td #{contest.name}
          |       
          td #{contest.startTime}
          |       
          td In next 2 hours
          |       
          td 7
          | 
          if user.isAdmin
            td
              button.contest-start-draw.btn.btn-warning(value="#{contest.id}") DRAW
  .table-title Finished Contests
  table#finished-contests-list.table.table-bordered.table-responsive
    thead
      tr
        th(colspan="2") Name
        |       
        th Started At
        |       
        th Draw Time
        |       
        th # Players
    |   
    tbody
      each contest in finishedContest
        tr
          td.contest-thumbnail
            img.contest-thumbnail(src="/images/#{contest.name}.jpg")
          |       
          td #{contest.name}
          |       
          td #{contest.startTime}
          |       
          td #{contest.drawTime}
          |       
          td 7
