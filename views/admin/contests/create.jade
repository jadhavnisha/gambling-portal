extends ../../layout

block content
  .row.centered-form
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title Create Contest
        | 
        .panel-body
          form(method="post", action="/admin/contests")
            input(type="hidden", name="gameId", value="1")
            input(type="hidden", name="status", value="created")
            .form-group.row
              label.col-sm-3.col-form-label(for="inputContestName") Contest Name
              |     
              .col-sm-9
                input#contest_name.form-control(placeholder='Contest Name', name='name', type='text', value='', required='required')
            |   
            .form-group.row
              label.col-sm-3.col-form-label(for="inputContestName") No of Dice
              |     
              .col-sm-9
                input#contest_config.form-control(placeholder='No of Dice', name='number_of_dice', type='text', value='', required='required')
            |   
            .form-group.row
              label.col-sm-3.col-form-label(for="staticGameName") Game
              |     
              .col-sm-9 Hi-Lo
            button.btn.btn-success.btn-block(type='submit') Create