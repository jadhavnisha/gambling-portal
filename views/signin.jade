extends layout

block content
  .row.centered-form
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title Welcome to Gambling
        | 
        .panel-body
          form(role='form', method='post', action='/signin')
            fieldset
              .form-group
                input.form-control(placeholder='E-mail', name='email', type='email', autofocus='', required='required')
              | 
              .form-group
                input.form-control(placeholder='Password', name='password', type='password', value='', required='required')
              // Change this to a button or input when using this as a form
              button.btn.btn-success.btn-block(type='submit') Login
              | 
              p.right-text
                | New Member?
                a(href='/signup') Sign up